<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>

      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 15 %>
      </div>
    </div>
  <hr>
  <br>
  <div class="col-md-12">
    <h4>Technologies used:</h4>
    <div>
      <%= form.fields_for :technologies do |technology_form|%>
        <div class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: 'form-control' %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save Portfolio Entry', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
