<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    
    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %> <!-- changed application to blogs -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/blog_nav" %>

    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title">My Blog</h1>
        <p class="lead blog-description">An example blog template built with Bootstrap.</p>
        <%= link_to 'Write a New Blog', new_blog_path if logged_in?(:site_admin) %>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <%= yield %>
        <%= render 'shared/blog_sidebar' %>
        <%= render 'shared/application_footer' %>
        <%= source_helper %>
      </div>
    </div>
  </body>
</html>
